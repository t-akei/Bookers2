<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<P id="notice"></P>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group" >
        <%= f.label :name, "Name" %><br>
        <%= f.text_field :name %><br>
      </div>
      <div class="form-group" >
        <%= f.label :profile_image, "Image" %><br>
        <%= f.file_field :profile_image, accept: "image/*" %><br>
      </div>
      <div class="form-group" >
        <%= f.label :introduction, "Introduction" %><br>
        <%= f.text_area :introduction %><br>
      </div>
      <div class="form-group" >
        <%= f.submit "Update User", class:"btn btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>




