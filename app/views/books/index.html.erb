<h1>Books#index</h1>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
       <tr>
         <td><%= @user.get.profile_image %></td>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
       </tr>
    <% end %>
  </tbody>
</table>


<h1>User info</h1>
 











<h1>New book</h1>

<%= form_with model: Book.new do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>