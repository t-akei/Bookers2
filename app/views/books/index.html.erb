<%= render 'newbook', user: @user %>
<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
       <tr>
         <td><%= image_tag book.user.get_profile_image(80, 80), accept: "image/*" %></td>
         <td>
           <%= link_to book_path(book.id) do %>
             <%= book.title %>
           <% end %>
         </td>
         <td><%= book.body %></td>
       </tr>
    <% end %>
  </tbody>
</table>


