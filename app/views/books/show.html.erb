<%= render 'newbook', user: @user %>
<div>
  <%= flash[:notice] %>
</div>

<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td><%= link_to user_path(@book.id) do %>
            <%= image_tag @user.get_profile_image(100, 100) %>
          <% end %><br>
          <%= link_to (user_path(@book.id)) do %>
            <%= @user.name %>
          <% end %>
      </td>
      <td><%= link_to(book_path(@user.id)) do %>
            <%= @book.title %>
          <% end %>
      </td>
      <td><%= link_to(book_path(@user.id)) do %>
            <%= @book.body %>
          <% end %>
      </td>
    <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", books_path, method: :delete %></td>
    <% end %>
    </tr>
  </tbody>
</table>
  
  
