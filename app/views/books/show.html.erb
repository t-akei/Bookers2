<div>
  <%= flash[:notice] %>
</div>

<p id:"notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/newbook', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">

<h2>Book detail</h2>
<table class="table">
  <tbody>
    <tr>
      <td><%= link_to user_path(@book.id) do %>
            <%= image_tag @user.get_profile_image(100, 100) %>
          <% end %><br>
          <%= link_to user_path(@book.id) do %>
            <%= @user.name %>
          <% end %>
      </td>
      <td><%= link_to book_path(@user.id) do %>
            <%= @book.title %>
          <% end %>
      </td>
      <td><%= @book.body %></td>
      
    <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", books_path, method: :delete, "data-confilm" => "本当に消しますか？" %></td>
    <% end %>
    </tr>
  </tbody>
</table>
  
  
