<div>
  <%= flash[:notice] %>
</div>

<h1>Book detail</h1>
<div>
  <%= image_tag @book.get_profile_image %>
  <P><%= @book.user.name %></P>
</div>

<table>
  <tbody>
    <% @books.each do |book| %>
       <tr>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
       <% if @book.user == current_user %>
         <td><%= link_to "Edit", edit_book_path(@book.id) %></yd>
         <td><%= link_to "Destroy", books_path, method: :delete %></td>
       <% end %>
       </tr>
    <% end %>   
  </tbody>
</table>
  
  
<%= render 'newbook', user: @user %>