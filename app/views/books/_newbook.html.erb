
<h2>User info</h2>
      <%= image_tag user.get_profile_image(100, 100), accept: "image/*" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to user_path(current_user.id), class:"btn btn-block btn-outline-secondary" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
    <%= form_with model: book, url: books_path, method: :post do |form| %>
      <div class="form-group">
        <%= form.label :title, "Title" %><br>
        <%= form.text_field :title %>
      </div>
      <div class="form-group">
        <%= form.label :body, "Opinion" %><br>
        <%= form.text_area :body %>
      </div>
      <div class="form-group">
        <%= form.submit "Create Books", class:"btn btn-success" %>
      </div>
    <% end %>
