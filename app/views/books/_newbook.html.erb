<h1>User info</h1>
<%= image_tag user.get_profile_image(100, 100), accept: "image/*" %>
<table>
  <thead>
    <tr>
      <th>name</th>
      <th>introduction</th>
    </tr>
  </thead>
  <tbody>
    <%# user.each do |users| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>
<%= link_to edit_user_path(current_user.id), class:"btn btn-block btn-outline-secondary" do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>

<h1>New book</h1>

<%= form_with model: Book.new do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book', class:"btn btn-success" %>

<% end %>