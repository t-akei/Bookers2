<!--ユーザーをフォローしている人一覧-->
<h1>Follower Users</h1>
<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image(80, 80), accept: "image/*" %></td>
      <td><%= user.name %></td>
      <td>フォロー数: <%= user.followers.count %></td>
      <td>フォロワー数: <%= user.followeds.count %></td>
      <td><%= link_to 'Show', user_path(user.id) %></td>
      <!--引数がuserでもuser.idでも表示は一緒。どっちがいいのか-->
    </tr>
    <% end %>
  </tbody>
</table>
