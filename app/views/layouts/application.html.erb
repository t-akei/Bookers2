<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
        <li>
          <%= link_to "Home", #URL %>
        </li>
        <li>
          <%= link_to "Users", #URL %>
        </li>
        <li>
          <%= link_to "Books", #URL %>
        </li>
        <li>
          <%= link_to "Log out", #URL, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "Home", #URL %>
        </li>
        <li>
          <%= link_to "About", #URL %>
        </li>
        <li>
          <%= link_to "sign up", #URL %>
        </li>
        <li>
          <%= link_to "Log in", #URL %>
        </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
